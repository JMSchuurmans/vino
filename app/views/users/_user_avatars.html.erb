<% if @users.any? %>
  <div class="user-avatars">
    <% @users.each do |user| %>
      <% if user.picture? %>
        <%= image_tag user.picture.url, size: 30 %>
      <% else %>
        <%= image_tag "https://api.adorable.io/avatars/30/#{user.name}.png" %>
      <% end %>
    <% end %>
  </div>
<% end %>
