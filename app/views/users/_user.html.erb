<li>
  <% if user.picture? %>
    <%= image_tag user.picture.url size: 20%>
  <% else %>
    <%= image_tag 'https://picsum.photos/20/?random' %>
  <% end %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user_path(user), method: :delete, data: { confirm: "Are you certain?" } %>
  <% end %>
</li>
