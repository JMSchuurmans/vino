<% provide(:title, @user.name) %>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well sticky">
      <strong><%= @user.name %></strong>
      <div class="well">
        <%= gravatar_for @user %>
      </div>
      <section class="follows">
        <%= render 'follows' %>
        <%= render 'follow_unfollow' if logged_in? %>
      </section>
      <div class="col-sm-9">

          <!-- <div class="col-sm-3">
            <div class="well">
             <p>John</p>
             <img src="bird.jpg" class="img-circle" height="55" width="55" alt="Avatar">
            </div>
          </div> -->
        <% if @feed_wines.any? %>
          <ol class="wines">
            <%= render @feed_wines %>
          </ol>
          <%= will_paginate @feed_wines %>
        <% end %>
      </div>
    </div>
  </div>
</div>
