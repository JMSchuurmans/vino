<% provide(:title, @user.name) %>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
      <strong><%= @user.name %></strong>
      <div class="well">
        <div class="thumbnail">
          <% if @user.picture? %>
            <%= image_tag @user.picture.url %>
          <% else %>
            <%= image_tag "https://api.adorable.io/avatars/285/#{@user.name}.png" %>
          <% end %>
        </div>
      </div>
      <section class="follows">
        <%= render 'follows' %>
        <%= render 'follow_unfollow' if logged_in? %>
      </section>
    </div>
      <div class="col-sm-9">
        <h3>Your feed</h3>
        <% if @feed_items.any? %>
          <% @feed_items.each do |feed_item| %>
            <div class="row">
              <div class="col-sm-12">
                <div class="wine">
                  <%= image_tag feed_item.picture.url if feed_item.picture? %>
                  <h3><%= feed_item.name %></h3><br>
                  <p><strong>Winery: </strong><%= feed_item.winery %><br>
                     <strong>Vintage: </strong><%= feed_item.vintage %><br>
                     <strong>Origin: </strong><%= feed_item.origin %><br>
                     <strong>Price: </strong><%= feed_item.price %><br>
                     <strong>Rating: </strong><%= feed_item.rating %><br>
                     <strong>Tasting Notes: </strong><%= feed_item.tasting_notes %><br></br>
                     <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span><br>
                     <strong><%= link_to "Details", wine_path(feed_item) %></strong>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
          <%= will_paginate @feed_items %>
        <% else %>
          <h4>You haven't followed anyone yet! <%= link_to "follow someone", users_path %> to start your feed. </h4>
        <% end %>
      </div>
   </div>
</div>
