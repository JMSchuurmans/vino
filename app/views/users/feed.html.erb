<% provide(:title, @user.name) %>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
      <strong><%= @user.name %></strong>
      <div class="well">
        <%= gravatar_for @user %>
      </div>
      <section class="follows">
        <%= render 'follows' %>
        <%= render 'follow_unfollow' if logged_in? %>
      </section>
    </div>
      <div class="col-sm-9">

          <% @feed_items.each do |feed_item| %>
            <div class="row">
              <div class="col-sm-12">
                <div class="wine">
                  <%= image_tag feed_item.picture.url if feed_item.picture? %>
                  <h3><%= feed_item.name %></h3><br>
                  <p><strong>Winery: </strong><%= feed_item.winery %><br>
                     <strong>Vintage: </strong><%= feed_item.vintage %><br>
                     <strong>Origin: </strong><%= feed_item.origin %><br>
                     <strong>Price: </strong><%= feed_item.price %><br>
                     <strong>Rating: </strong><%= feed_item.rating %><br>
                     <strong>Tasting Notes: </strong><%= feed_item.tasting_notes %><br></br>
                     <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span><br>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
          <%= will_paginate @feed_items %>
      </div>
   </div>
</div>
