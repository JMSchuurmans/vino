<% provide(:title, @title) %>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
      <%= render 'profile_picture' %>
      <p><strong><%= @user.name %></strong></p>
      <%= render 'wine_count' %>
      <h5><%= link_to "Profile", @user %></h5>
      <br>
        <div class="well">
          <div class="follows">
            <%= render 'follows' %>
          </div>
        </div>
        <div class="well">
          <%= render 'user_avatars' %>
        </div>
      </div>
  <div class="col-sm-9">
    <h3><%= @title %></h3>
    <%= render 'users' %>
    </div>
  </div>
</div>
