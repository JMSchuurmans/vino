<% provide(:title, 'All Members') %>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
        <div class="thumbnail">
          <% if @user.picture? %>
            <%= image_tag @user.picture.url %>
          <% else %>
            <%= image_tag "https://api.adorable.io/avatars/285/#{@user.name}.png" %>
          <% end %>
        </div>
      <p><strong><%= @user.name %></strong></p>
      <% if @user.wines.count == 1 %>
        <span><strong><%= @user.wines.count %> wine <strong></span>
      <% else %>
        <span><strong><%= @user.wines.count %> wines <strong></span>
      <% end %>
      <h5><%= link_to "Profile", @user %></h5>
    <br>
    <div class="well">
    <div class="follows">
      <%= render 'follows' %>
    </div>
    </div>
    <div class="well">
      <% if @users.any? %>
        <div class="user-avatars">
          <% @users.each do |user| %>
            <% if user.picture? %>
              <%= image_tag user.picture.url, size: 30 %>
            <% else %>
              <%= image_tag "https://api.adorable.io/avatars/30/#{user.name}.png" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  <div class="col-sm-9">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <h1>All Members</h1>
        <div id="navcontainer">
          <ul class="users">
            <% @users.each do |user| %>
              <%= render @users %>
            <% end %>
          </ul>
      </div>
        <%= will_paginate @users %>
    <% end %>
  </div>
</div>
</div>
