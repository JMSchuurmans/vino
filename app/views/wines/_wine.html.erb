<li id="wine-<%= wine.id %>">
  <%= link_to gravatar_for(wine.user, size: 50), wine.user %>
  <span class="user"><%= link_to wine.user.name, wine.user %></span><br>
  <span class="name"><strong>Name: </strong><%= wine.name %></span><br>
  <span class="winery"><strong>Winery: </strong><%= wine.winery %></span><br>
  <span class="vintage"><strong>Vintage: </strong><%= wine.vintage %></span><br>
  <span class="origin"><strong>Origin: </strong><%= wine.origin %></span><br>
  <span class="price"><strong>Price: </strong><%= wine.price %></span><br>
  <span class="rating"><strong>Rating: </strong><%= wine.rating %></span><br>
  <span class="tasting_notes"><strong>Tasting Notes: </strong><%= wine.tasting_notes %></span><br>
  <span class="timestamp">Posted <%= time_ago_in_words(wine.created_at) %> ago.</span><br>
  <% if current_user?(wine.user) %>
    <%= link_to "Delete", wine, method: :delete, data: { confirm: "Are you certain?" } %>
  <% end %>
</li>
