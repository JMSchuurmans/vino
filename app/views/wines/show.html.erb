<% provide(:title, @wine.name) %>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
        <%= render 'users/profile_picture' %>
      <section class="follows">
        <%= render 'users/follows' %>
        <%= render 'users/follow_unfollow' if logged_in? %>
      </section>
      <div class="well">

      <%= render 'users/links' %>
      </div>
    </div>
    <div class="col-sm-7">
      <h3>Details on <%= @wine.name %></h3>

      <div class="row">
        <div class="col-sm-12">
          <%= render 'wine_details' %>
        </div>
      </div>
    </div>


    <div class="col-sm-2 well">
      <%= render 'users/ads' %>
   </div>
</div>
